<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="icastillo.examen2trimestre.application.application.FragmentInsercion">

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnBackInsert"
        android:background="@android:drawable/ic_menu_revert"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnSaveFutbolista"
        android:background="@android:drawable/ic_menu_save"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nombrePersonaIns"
        android:layout_below="@id/btnSaveFutbolista"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:hint="Nombre"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/apellidosPersonaIns"
        android:hint="Apellidos"
        android:layout_below="@id/nombrePersonaIns"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check1"
        android:layout_below="@id/apellidosPersonaIns"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="check1"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check2"
        android:layout_below="@id/check1"
        android:layout_marginLeft="20dp"
        android:text="check2"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check3"
        android:layout_below="@id/check2"
        android:layout_marginLeft="20dp"
        android:text="check3"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check4"
        android:layout_below="@id/check3"
        android:layout_marginLeft="20dp"
        android:text="check4"/>



</RelativeLayout>
