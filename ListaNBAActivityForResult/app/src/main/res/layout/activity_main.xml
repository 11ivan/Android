<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.icastillo.listanbaactivityforresult.MainActivity">

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/image"
       android:layout_marginTop="100dp"
       android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:id="@+id/nombre"
        android:layout_alignLeft="@id/image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/estadio"
        android:layout_alignLeft="@id/nombre"
        android:layout_below="@id/nombre"/>


   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/botonSelect"
       android:layout_below="@id/estadio"
       android:layout_marginTop="10dp"
       android:layout_centerHorizontal="true"
       android:text="Seleccionar equipo"/>

</RelativeLayout>
