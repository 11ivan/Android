<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cuatroenraya.icastillo.cuatroenraya.application.IntroducirNombreUsuarioFragment"
    android:background="#99000000">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="#99000000"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:background="#E3BE46"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Introduzca un nombre de Usuario"
                android:textAlignment="center"
                android:id="@+id/textNombreUsuario"
                android:textColor="@android:color/white"
                android:textSize="19dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutEdistText"
            android:background="@android:color/white"
            android:layout_below="@id/linearLayout"
            android:layout_marginTop="30dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextNombreUsuario"
                android:layout_below="@id/linearLayout"
                android:textColor="@android:color/black"
                android:textSize="15dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnContinuarFragmentNombreUsuario"
            android:text="Continuar"
            android:textColor="#FFFFFF"
            android:textSize="10dp"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_below="@id/linearLayoutEdistText"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            />




    </RelativeLayout>

</RelativeLayout>
