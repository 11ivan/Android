<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cuatroenraya.icastillo.cuatroenraya.application.MenuPrincipalFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNombre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="15dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:id="@+id/btnPlay"
        android:text="Jugar"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btnOptions"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:id="@+id/btnOptions"
        android:text="Opciones"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:id="@+id/btnPuntuaciones"
        android:text="Puntuaciones"
        android:layout_below="@id/btnOptions"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>
